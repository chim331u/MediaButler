@namespace MediaButler.Web.Components.UI

<div class="loading-spinner-container @CssClass">
    @if (ShowText && !string.IsNullOrEmpty(Text))
    {
        <div class="loading-text">@Text</div>
    }
    <div class="loading-spinner @Size.ToString().ToLower()"></div>
</div>

@code {
    [Parameter] public string? Text { get; set; }
    [Parameter] public bool ShowText { get; set; } = true;
    [Parameter] public SpinnerSize Size { get; set; } = SpinnerSize.Medium;
    [Parameter] public string CssClass { get; set; } = "";

    public enum SpinnerSize
    {
        Small,
        Medium,
        Large
    }
}

<style>
    .loading-spinner-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        padding: 2rem;
    }

    .loading-text {
        color: var(--gray-600);
        font-size: 0.875rem;
    }

    .loading-spinner {
        border: 3px solid var(--gray-200);
        border-top: 3px solid var(--primary-color);
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    .loading-spinner.small {
        width: 20px;
        height: 20px;
        border-width: 2px;
    }

    .loading-spinner.medium {
        width: 40px;
        height: 40px;
        border-width: 3px;
    }

    .loading-spinner.large {
        width: 60px;
        height: 60px;
        border-width: 4px;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style>