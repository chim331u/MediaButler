@namespace MediaButler.Web.Components.UI

<button 
    type="@Type" 
    class="btn btn-@Variant.ToString().ToLower() btn-@Size.ToString().ToLower() @CssClass"
    disabled="@(IsDisabled || IsLoading)"
    @onclick="HandleClick">
    
    @if (IsLoading)
    {
        <LoadingSpinner Size="LoadingSpinner.SpinnerSize.Small" ShowText="false" />
        @if (!string.IsNullOrEmpty(LoadingText))
        {
            <span>@LoadingText</span>
        }
    }
    else
    {
        @if (!string.IsNullOrEmpty(Icon))
        {
            <span class="btn-icon">@Icon</span>
        }
        @if (ChildContent != null)
        {
            @ChildContent
        }
        else if (!string.IsNullOrEmpty(Text))
        {
            <span>@Text</span>
        }
    }
</button>

@code {
    [Parameter] public string? Text { get; set; }
    [Parameter] public string? Icon { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public ButtonVariant Variant { get; set; } = ButtonVariant.Primary;
    [Parameter] public ButtonSize Size { get; set; } = ButtonSize.Medium;
    [Parameter] public string Type { get; set; } = "button";
    [Parameter] public bool IsDisabled { get; set; }
    [Parameter] public bool IsLoading { get; set; }
    [Parameter] public string? LoadingText { get; set; }
    [Parameter] public string CssClass { get; set; } = "";
    [Parameter] public EventCallback<MouseEventArgs> OnClick { get; set; }

    private async Task HandleClick(MouseEventArgs args)
    {
        if (!IsDisabled && !IsLoading)
        {
            await OnClick.InvokeAsync(args);
        }
    }

    public enum ButtonVariant
    {
        Primary,
        Secondary,
        Success,
        Warning,
        Danger,
        Ghost
    }

    public enum ButtonSize
    {
        Small,
        Medium,
        Large
    }
}

<style>
    .btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        border: 1px solid transparent;
        border-radius: 0.375rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s ease-in-out;
        text-decoration: none;
    }

    .btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    /* Sizes */
    .btn.btn-small {
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
    }

    .btn.btn-medium {
        padding: 0.5rem 1rem;
        font-size: 0.875rem;
    }

    .btn.btn-large {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
    }

    /* Variants */
    .btn.btn-primary {
        background: var(--primary-color);
        color: white;
        border-color: var(--primary-color);
    }

    .btn.btn-primary:hover:not(:disabled) {
        background: var(--primary-hover);
        border-color: var(--primary-hover);
    }

    .btn.btn-secondary {
        background: var(--gray-600);
        color: white;
        border-color: var(--gray-600);
    }

    .btn.btn-secondary:hover:not(:disabled) {
        background: var(--gray-700);
        border-color: var(--gray-700);
    }

    .btn.btn-success {
        background: var(--success-color);
        color: white;
        border-color: var(--success-color);
    }

    .btn.btn-success:hover:not(:disabled) {
        background: #15803d;
        border-color: #15803d;
    }

    .btn.btn-warning {
        background: var(--warning-color);
        color: white;
        border-color: var(--warning-color);
    }

    .btn.btn-warning:hover:not(:disabled) {
        background: #c2410c;
        border-color: #c2410c;
    }

    .btn.btn-danger {
        background: var(--error-color);
        color: white;
        border-color: var(--error-color);
    }

    .btn.btn-danger:hover:not(:disabled) {
        background: #b91c1c;
        border-color: #b91c1c;
    }

    .btn.btn-ghost {
        background: transparent;
        color: var(--gray-700);
        border-color: var(--gray-300);
    }

    .btn.btn-ghost:hover:not(:disabled) {
        background: var(--gray-50);
        border-color: var(--gray-400);
    }

    .btn-icon {
        font-size: 1em;
    }
</style>