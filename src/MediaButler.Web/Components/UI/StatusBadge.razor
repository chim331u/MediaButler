<style>
    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 500;
        white-space: nowrap;
    }

    .status-icon {
        font-size: 0.875rem;
    }

    /* Default status styles using design system colors */
    .status-badge.discovered,
    .status-badge.new {
        background: var(--info-color-20);
        color: var(--info-color);
    }

    .status-badge.classified,
    .status-badge.pending,
    .status-badge.pendingreview {
        background: var(--warning-color-20);
        color: var(--warning-color);
    }

    .status-badge.confirmed,
    .status-badge.ready {
        background: var(--success-color-20);
        color: var(--success-color);
    }

    .status-badge.moved,
    .status-badge.complete {
        background: var(--primary-color-20);
        color: var(--primary-color);
    }

    .status-badge.error,
    .status-badge.failed {
        background: var(--error-color-20);
        color: var(--error-color);
    }

    .status-badge.processing,
    .status-badge.inprogress {
        background: var(--neutral-200);
        color: var(--text-muted);
    }

    .status-badge.retry {
        background: var(--warning-color-20);
        color: var(--warning-color);
    }
</style>