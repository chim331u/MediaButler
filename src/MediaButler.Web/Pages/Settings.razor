@page "/settings"

<PageTitle>Settings - MediaButler</PageTitle>

<div class="settings-page">
    <h2>Settings</h2>
    
    <div class="settings-grid">
        <div class="card">
            <div class="card-header">
                File Discovery
            </div>
            <div class="card-body">
                <p class="text-muted">File discovery settings will be implemented in future versions.</p>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                ML Configuration
            </div>
            <div class="card-body">
                <p class="text-muted">ML model configuration will be implemented in future versions.</p>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                Path Settings
            </div>
            <div class="card-body">
                <p class="text-muted">Path configuration will be implemented in future versions.</p>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                System
            </div>
            <div class="card-body">
                <p class="text-muted">System settings will be implemented in future versions.</p>
            </div>
        </div>
    </div>
</div>

<style>
    .settings-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1.5rem;
        margin-top: 1rem;
    }
</style>