@page "/settings"
@using MediaButler.Web.Components.Configuration

<PageTitle>Settings - MediaButler</PageTitle>

<ConfigurationManagementComponent />

<style>
    .settings-page {
        padding: 1.5rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .settings-header {
        margin-bottom: 2rem;
    }

    .settings-header h2 {
        margin: 0 0 0.5rem 0;
        color: var(--gray-900);
    }

    .settings-header p {
        margin: 0;
        color: var(--gray-600);
    }

    .settings-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-weight: 600;
    }

    .setting-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        gap: 1rem;
    }

    .setting-item:last-child {
        margin-bottom: 0;
    }

    .setting-item label {
        font-weight: 500;
        color: var(--gray-700);
        min-width: 140px;
    }

    .setting-input, .setting-select {
        flex: 1;
        padding: 0.5rem;
        border: 1px solid var(--gray-300);
        border-radius: 0.375rem;
        background: var(--gray-50);
        color: var(--gray-500);
    }

    .setting-range {
        flex: 1;
        margin-right: 0.5rem;
    }

    .settings-notice {
        display: flex;
        gap: 0.75rem;
        padding: 1rem;
        background: #f0f9ff;
        border: 1px solid #0ea5e9;
        border-radius: 0.5rem;
        color: var(--gray-700);
    }

    .settings-notice strong {
        color: var(--gray-900);
        display: block;
        margin-bottom: 0.25rem;
    }

    .settings-notice p {
        margin: 0;
        line-height: 1.5;
    }

    @@media (max-width: 768px) {
        .settings-page {
            padding: 1rem;
        }

        .settings-grid {
            grid-template-columns: 1fr;
        }

        .setting-item {
            flex-direction: column;
            align-items: stretch;
            gap: 0.5rem;
        }

        .setting-item label {
            min-width: auto;
        }
    }
</style>