{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "Service": "MediaButler.API",
      "Version": "1.0.0",
      "Environment": "Development"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/data/logs/mediabutler-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/data/logs/mediabutler-errors-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Warning"
        }
      }
    ],
    "ARM32Optimization": {
      "MemoryThresholdMB": 300,
      "AutoGCTriggerMB": 250,
      "PerformanceThresholdMs": 1000,
      "MaxLogFileSizeMB": 50
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/data/mediabutler.db;Cache=Shared;Foreign Keys=true;"
  },
  "MediaButler": {
    "Paths": {
      "MediaLibrary": "/library",
      "WatchFolder": "/watch",
      "PendingReview": "/tmp/mediabutler/pending"
    },
    "FileDiscovery": {
      "WatchFolders": [
        "/watch"
      ],
      "EnableFileSystemWatcher": true,
      "ScanIntervalMinutes": 5,
      "FileExtensions": [ ".mkv", ".mp4", ".avi", ".m4v", ".wmv" ],
      "ExcludePatterns": [ ".*tmp", ".*part", ".*incomplete" ],
      "MinFileSizeMB": 1,
      "DebounceDelaySeconds": 3,
      "MaxConcurrentScans": 2
    },
    "ML": {
      "ModelPath": "models",
      "ActiveModelVersion": "1.0.0",
      "AutoClassifyThreshold": 0.85,
      "SuggestionThreshold": 0.50,
      "MaxClassificationTimeMs": 500,
      "MaxAlternativePredictions": 3,
      "EnableBatchProcessing": true,
      "MaxBatchSize": 50,
      "EnableAutoRetraining": true,
      "RetrainingThreshold": 100,
      "Tokenization": {
        "NormalizeSeparators": true,
        "RemoveQualityIndicators": true,
        "RemoveLanguageCodes": true,
        "RemoveReleaseTags": true,
        "ConvertToLowercase": true,
        "MinTokenLength": 2,
        "CustomRemovalPatterns": []
      },
      "Training": {
        "TrainingRatio": 0.7,
        "ValidationRatio": 0.2,
        "NumberOfIterations": 100,
        "LearningRate": 0.1,
        "UseEarlyStopping": true,
        "MinimumAccuracy": 0.75
      },
      "Features": {
        "UseEpisodeFeatures": true,
        "UseQualityFeatures": true,
        "UseFileExtensionFeature": true,
        "EnableDetailedLogging": false,
        "EnablePredictionCaching": true
      },
      "CsvImport": {
        "DefaultCsvPath": "/data/training_data.csv",
        "Separator": ";",
        "NormalizeCategoryNames": true,
        "SkipDuplicates": true,
        "ValidateFileExtensions": true,
        "MaxSamples": 0,
        "AutoImportOnStartup": false,
        "BackupPath": "/data/backups/training_data_backup.csv"
      }
    }
  }
}
