{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft.AspNetCore": "Information",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "Properties": {
      "Service": "MediaButler.API",
      "Version": "1.0.0",
      "Environment": "Development"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:HH:mm:ss.fff} [{Level:u3}] [{SourceContext:l}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "../../temp/logs/dev-mediabutler-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 3,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] [{SourceContext}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "../../temp/logs/dev-errors-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] [{SourceContext}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Warning"
        }
      }
    ],
    "ARM32Optimization": {
      "MemoryThresholdMB": 200,
      "AutoGCTriggerMB": 150,
      "PerformanceThresholdMs": 500,
      "MaxLogFileSizeMB": 25
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=../../temp/mediabutler.dev.db;Cache=Shared;Foreign Keys=true;"
  },
  "MediaButler": {
    "Paths": {
      "MediaLibrary": "../../temp/dest",
      "WatchFolder": "../../temp/watch",
      "PendingReview": "/tmp/mediabutler/pending"
    },
    "FileDiscovery": {
      "WatchFolders": [
        "../../temp/watch"
      ],
      "EnableFileSystemWatcher": true,
      "ScanIntervalMinutes": 5,
      "FileExtensions": [ ".mkv", ".mp4", ".avi", ".m4v", ".wmv", ".txt", ".pdf" ],
      "ExcludePatterns": [ ".*tmp", ".*part", ".*incomplete" ],
      "MinFileSizeMB": 1,
      "DebounceDelaySeconds": 3,
      "MaxConcurrentScans": 2
    },
    "ML": {
      "ModelPath": "models",
      "ActiveModelVersion": "1.0.0",
      "AutoClassifyThreshold": 0.85,
      "SuggestionThreshold": 0.50,
      "MaxClassificationTimeMs": 500,
      "MaxAlternativePredictions": 3,
      "EnableBatchProcessing": true,
      "MaxBatchSize": 50,
      "EnableAutoRetraining": true,
      "RetrainingThreshold": 100,
      "Tokenization": {
        "NormalizeSeparators": true,
        "RemoveQualityIndicators": true,
        "RemoveLanguageCodes": true,
        "RemoveReleaseTags": true,
        "ConvertToLowercase": true,
        "MinTokenLength": 2,
        "CustomRemovalPatterns": []
      },
      "Training": {
        "TrainingRatio": 0.7,
        "ValidationRatio": 0.2,
        "NumberOfIterations": 100,
        "LearningRate": 0.1,
        "UseEarlyStopping": true,
        "MinimumAccuracy": 0.75
      },
      "Features": {
        "UseEpisodeFeatures": true,
        "UseQualityFeatures": true,
        "UseFileExtensionFeature": true,
        "EnableDetailedLogging": false,
        "EnablePredictionCaching": true
      },
      "CsvImport": {
        "DefaultCsvPath": "data/training_data.csv",
        "Separator": ";",
        "NormalizeCategoryNames": true,
        "SkipDuplicates": true,
        "ValidateFileExtensions": true,
        "MaxSamples": 0,
        "AutoImportOnStartup": false,
        "BackupPath": "data/backups/training_data_backup.csv"
      }
    }
  }
}
